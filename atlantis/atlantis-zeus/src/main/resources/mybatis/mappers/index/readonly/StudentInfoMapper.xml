<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atlantis.zeus.index.dao.readonly.StudentInfoReadMapper">

    <sql id="fields">
        `id` as id,
        `stu_global_key` as stuGlobalKey,
        `name` as name,
        `sex` as sex,
        `age` as age,
        `create_time` as createTime,
        `update_time` as updateTime
    </sql>

    <select id="queryById" resultType="com.atlantis.zeus.index.dto.StudentInfo" parameterType="java.lang.Integer">
        SELECT <include refid="fields"/>
        FROM local_student_info
        WHERE id = #{id}
    </select>


</mapper>